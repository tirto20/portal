<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="id.co.sigma.portalsigma.fragment.PostNowFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="16dp"
                android:text="What's On Your Mind ?"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/submit_snap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="16dp"
            android:text="Post Now"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </FrameLayout>


    <id.co.sigma.portalsigma.customfonts.MyEditText
        android:id="@+id/caption_mind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#f0f0f4"
        android:drawableLeft="@drawable/ic_notes"
        android:drawablePadding="16dp"
        android:hint="Caption"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#000" />

    <id.co.sigma.portalsigma.customfonts.MyEditText
        android:id="@+id/content_mind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#f0f0f4"
        android:drawableLeft="@drawable/ic_notes"
        android:drawablePadding="16dp"
        android:hint="Content"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="#000" />

